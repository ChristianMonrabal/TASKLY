/* Estilos para el modal de detalles de trabajo */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s, visibility 0.3s;
}

.modal-overlay.active {
  opacity: 1;
  visibility: visible;
}

.trabajo-detalle-modal {
  background-color: white;
  border-radius: var(--radius);
  width: 90%;
  max-width: 1000px;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: 0 5px 30px rgba(0, 0, 0, 0.3);
  position: relative;
  animation: modalFadeIn 0.4s;
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-header {
  padding: 20px;
  border-bottom: 1px solid var(--border);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  top: 0;
  background-color: white;
  z-index: 10;
}

.modal-header h2 {
  margin: 0;
  color: var(--text-dark);
  font-size: 1.5rem;
}

.close-modal {
  background: none;
  border: none;
  font-size: 1.8rem;
  cursor: pointer;
  color: var(--text-light);
  transition: color 0.2s;
}

.close-modal:hover {
  color: var(--primary);
}

.modal-content {
  padding: 0;
}

.trabajo-slider {
  position: relative;
  max-height: 400px;
  overflow: hidden;
}

.trabajo-imagenes {
  display: flex;
  transition: transform 0.5s ease;
}

.imagen-trabajo {
  min-width: 100%;
  height: 400px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
}

.imagen-trabajo img {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

.imagen-trabajo.no-imagen {
  background-color: #eee;
}

.slider-controls {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20px;
}

.slider-prev, .slider-next {
  pointer-events: auto;
  background-color: rgba(255, 255, 255, 0.8);
  border: none;
  border-radius: 50%;
  width: 40px;
  height: 40px;
  font-size: 1rem;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  transition: background-color 0.2s;
}

.slider-prev:hover, .slider-next:hover {
  background-color: white;
}

.trabajo-info {
  padding: 30px;
}

.precio-tag {
  font-size: 1.8rem;
  font-weight: bold;
  color: var(--primary);
  margin-bottom: 15px;
}

.categoria-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-bottom: 15px;
}

.trabajo-valoracion {
  display: flex;
  align-items: center;
  margin: 15px 0;
}

.trabajo-valoracion .estrellas {
  color: #ffb100;
  display: inline-flex;
  margin-right: 10px;
}

.trabajo-valoracion .estrellas i {
  margin-right: 2px;
}

.trabajo-valoracion .num-valoraciones {
  color: var(--text-light);
}

.trabajo-descripcion, .trabajo-direccion, .trabajo-fecha {
  margin-bottom: 20px;
}

.trabajo-descripcion h3, .trabajo-direccion h3, .trabajo-fecha h3 {
  font-size: 1.1rem;
  margin-bottom: 10px;
  color: var(--text-dark);
}

.trabajo-direccion p, .trabajo-fecha p {
  display: flex;
  align-items: center;
}

.trabajo-direccion p i, .trabajo-fecha p i {
  margin-right: 8px;
  color: var(--primary);
}

.trabajo-acciones {
  display: flex;
  flex-wrap: wrap;
  gap: 15px;
  margin-top: 30px;
}

.btn-ver-completo, .btn-postular {
  padding: 12px 25px;
  border-radius: var(--radius);
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
}

.btn-ver-completo {
  background-color: white;
  color: var(--primary);
  border: 1px solid var(--primary);
  text-decoration: none;
}

.btn-ver-completo:hover {
  background-color: var(--primary-light);
}

.btn-postular {
  background-color: var(--primary);
  color: white;
  border: none;
}

.btn-postular:hover {
  background-color: var(--primary-dark);
}

/* Responsive */
@media (max-width: 768px) {
  .trabajo-detalle-modal {
    width: 95%;
    max-height: 95vh;
  }
  
  .modal-header h2 {
    font-size: 1.3rem;
  }
  
  .trabajo-imagenes {
    height: 250px;
  }
  
  .imagen-trabajo {
    height: 250px;
  }
  
  .trabajo-info {
    padding: 20px;
  }
  
  .trabajo-acciones {
    flex-direction: column;
    gap: 10px;
  }
  
  .btn-ver-completo, .btn-postular {
    width: 100%;
    text-align: center;
  }
}
